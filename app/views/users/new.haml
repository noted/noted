#user
  %section
    %header
      %h3
        Join
        %span / Free
    = partial "partials/flash", :locals => { :flash => flash }
    - form_tag url(:users, :create), :method => "post" do
      %table
        %tr
          %td
            %label{:for => "user[name]"} Name
          %td
            = text_field_tag :"user[name]", :class => "large", :placeholder => "John Q. Sample"
        %tr
          %td
            %label{:for => "user[username]"} Username
          %td
            = text_field_tag :"user[username]", :class => "large", :placeholder => "johnsample"
        %tr
          %td
            %label{:for => "user[email]"} Email
          %td
            = email_field_tag :"user[email]", :class => "large", :placeholder => "john.sample@uni.edu"
        %tr
          %td
            %label{:for => "user[password]"} Password
          %td
            = password_field_tag :"password[password]", :placeholder => "secret"
            = password_field_tag :"password[confirm]", :placeholder => "again"
        %tr
          %td
          %td
            %button.btn.primary{:type => "submit"}
              Join
