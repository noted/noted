#generic
  %header
    %h2 Account
  %section
    - form_tag url(:users, :update), :method => "patch" do
      %p
        = label_tag "user[name]"
        = text_field_tag "user[name]", :value => @user.name
      %p
        = label_tag "user[email]"
        = email_field_tag "user[email]", :value => @user.email
      %p
        = label_tag "user[username]"
        = text_field_tag "user[username]", :value => @user.username
      %p
        = label_tag "user[website]"
        = text_field_tag "user[website]", :value => @user.website
      %p
        = label_tag "user[location]"
        = text_field_tag "user[location]", :value => @user.location
      %footer
        = hidden_field_tag :id, :value => @user.id
        = submit_tag "Save", :class => "btn primary"
