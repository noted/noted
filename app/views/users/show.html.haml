.user
  %aside
    / %figure.avatar
    /   %img{:src => @user.gravatar}
    %h2= @user.name
    %p.biography= @user.biography
    %nav.personal
      %ul
        %li
          %i.ss-icon location
          %span= @user.location
        - @user.social.each do |service, link|
          %li
            %i.ss-icon.ss-social-regular= service
            - if service == 'twitter'
              %span= link_to "@#{link}", "https://twitter.com/#{link}"
  %section
    - @projects.each do |project|
      %article
        = render :partial => 'projects/project', object: project
