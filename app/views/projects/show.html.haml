= render :partial => "projects/header", locals: { project: @project }
.container
  %section
    %section
      %header
        %h3 Sources
        = link_to "New", @project.path("/sources/new"), class: "btn"
      - @project.sources.each do |source|
        = render :partial => "sources/source", object: source
    %section
      %header
        %h3 Notes
        = link_to "New", @project.path("/notes/new"), class: "btn"
      - @project.notes.each do |note|
        = render :partial => "notes/note", object: note
