= render :partial => "projects/header", locals: { project: current_project }
.container
  %section.project-children
    %section.notes
      %header
        %h3 Sources
        = link_to "New", current_project.path("/sources/new"), class: "btn"
      - current_project.sources.each do |source|
        = render :partial => "sources/source", object: source
    %section.sources
      %header
        %h3 Notes
        = link_to "New", current_project.path("/notes/new"), class: "btn"
      - current_project.notes.each do |note|
        = render :partial => "notes/note", object: note
