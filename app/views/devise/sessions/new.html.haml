= devise_error_messages!
.content
  = form_for(resource, :html => { :class => "grid-form" }, :as => resource_name, :url => session_path(resource_name)) do |f|
    %fieldset
      %legend Login
      %div{'data-row-span' => '2'}
        %div{'data-field-span' => '1'}
          = f.label :email
          = f.email_field :email
        %div{'data-field-span' => '1'}
          = f.label :password
          = f.password_field :password
      %footer
        = render "devise/shared/links"
        %p
          = f.check_box :remember_me
          = f.label :remember_me
        %p
          = f.submit "Login"
