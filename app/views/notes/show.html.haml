.container
  = form_tag notes_path(id: current_note.id), method: :patch, class: 'grid-form' do |f|
    %fieldset
      %legend
      %div{'data-row-span' => '1'}
        %div{'data-field-span' => '1'}
          = label_tag 'note[title]', 'Title'
          = text_field_tag 'note[title]', current_note.title
      %div{'data-row-span' => '1'}
        %div{'data-field-span' => '1'}
          = label_tag 'note[text]', 'Text'
          = text_area_tag 'note[text]', current_note.text
      %footer
        = hidden_field_tag :user, params[:user]
        = hidden_field_tag :project, params[:project]
        = submit_tag "Save", :class => "green filled"
