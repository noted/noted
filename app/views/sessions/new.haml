- form_tag url(:sessions, :create) do
  = partial 'partials/flash', :locals => { :flash => flash }
  %p= email_field_tag :"user[email]", :placeholder => "Email"
  %p= password_field_tag :"user[password]", :placeholder => "Password"
  %nav
    %ul
      %li
        %a.btn{:href => url(:password, :reset)} Help
      %li= button_tag "Login", :class => "btn primary", :type => "submit"
