!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}

    %meta{:content => "Research together.", :name => "description"}
    %meta{:content => "Noted.", :name => "author"}

    %title Noted.

    %link{:href => "/favicon.ico", :rel => "icon"}

    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}
    %link{:href => "/css/application.css", :rel => "stylesheet"}

    %script{:src => "http://code.jquery.com/jquery-1.9.1.min.js"}
    %script{:src => "/jsc/lib/jquery.fittext.js"}
    %script{:src => "/jsc/lib/autoresize.jquery.js"}
    %script{:src => "/jsc/application.js"}
    %script{:src => "//use.typekit.net/rau7fcj.js", :type => "text/javascript"}
    :coffeescript
      try
        Typekit.load()

  %body
    %header
      .contain
        %hgroup
          %h1
            %a{:href => url(:index)} Noted.
        %nav
          - if current_user
            %section
              %ul
                %li
                  %a{:href => url(:explore)} Explore
                %li
                  %a{:href => url(:features)} Blog
                %li
                  %a{:href => url(:support)} Help
            %section
              %ul
                %li
                  %a.btn.blue{:href => url(:projects, :new)}
                    %i.ss-icon plus
                %li
                  %a.btn.turquoise{:href => url(:users, :view, :user => current_user.username)}
                    %i.ss-icon user
                %li
                  %a.btn.yellow{:href => url(:sessions, :destroy)} Logout
          - else
            %section
              %ul
                %li
                  %a{:href => url(:explore)} Explore
                %li
                  %a{:href => url(:features)} Features
                %li
                  %a{:href => url(:support)} Pricing
            %section
              %ul
                %li
                  %a.btn.primary{:href => url(:users, :new)} Join
                %li
                  %a.btn{:href => url(:sessions, :new)} Login


    #main{:role => "main"}
      = yield

    %footer
      .contain
        %nav
          %ul
            %li
              %a{:href => ""} About
            %li
              %a{:href => ""} Pricing
            %li
              %a{:href => ""} Documentation
            %li
              %a{:href => ""} Support
            %li
              %a{:href => ""} Blog
            %li
              %a{:href => ""} Imprint
        %p= "Noted fecit #{Time.now.year}. Made in Connecticut."

